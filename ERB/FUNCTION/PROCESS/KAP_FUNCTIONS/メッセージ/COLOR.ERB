@SET_COLOR, ARGS, ARG = -1
SETCOLOR COLOR(ARGS, ARG)

;----------------------------------------------------------
;@COLOR
;ARGS 색의 이름칭
;ARG  명도를 ARG 퍼센트로 변경
;----------------------------------------------------------
@COLOR, ARGS, ARG = -1
#FUNCTION
#LOCALSIZE 1
#DIM PREV
IF ARGS == "PREV"
	RETURNF PREV
ELSE
	PREV = GETCOLOR()
ENDIF
SELECTCASE TOUPPER(ARGS)
	CASE "RESET", "DEFAULT", "DEF"
		LOCAL = GETDEFCOLOR()
	CASE "BG"
		LOCAL = GETBGCOLOR()
	CASE "DEFBG"
		LOCAL = GETDEFBGCOLOR()
	CASE "RED", "빨강"
		LOCAL =  0x990000
	CASE "P-RED", "PASTEL-RED", "파 세키"
		LOCAL =  0xC07070
	CASE "P-BLUE", "PASTEL-BLUE", "파 파랑"
		LOCAL =  0x7070C0
	CASE "P-GREEN", "PASTEL-GREEN", "파 초록"
		LOCAL =  0x70C070
	CASE "P-PURPLE", "PASTEL-PURPLE", "파유카리"
		LOCAL =  0xC070C0
	CASE "P-YELLOW", "PASTEL-YELLOW", "파 노랑"
		LOCAL =  0x505020
	CASE "P-BGREEN", "P-BLUEGREEN", "PASTELDARK-BLUEGREEN", "파 청록색"
		LOCAL =  0x205050
	CASE "WHITE", "흰색"
		LOCAL =  0xC0C0C0
	CASE "BLACK", "흑"
		LOCAL =  0x000000
	CASE "AQUA", "물색"
		LOCAL =  0x66FFFF
	CASE "GRAY", "회색"
		LOCAL =  0x404040
	CASE "LIGHT-GRAY", "명회색"
		LOCAL =  0x777777
	CASE "PINK", "복숭아"
		LOCAL =  0xFFB3DE
	CASE "DARK-PINK", "흑도"
		LOCAL =  0x990099
	CASE "YELLOW", "노랑"
		LOCAL =  0xFFFF00
	CASE "FOCUS"
		LOCAL =  GETFOCUSCOLOR()
	CASEELSE
		IF ISNUMERIC(ARGS)
			LOCAL = TOINT(ARGS)
		ELSE
			THROW @COLOR에등록되어 있지 않은 명칭[%ARGS%]가 지정했다.
		ENDIF
ENDSELECT
SIF ARG >= 0
	LOCAL = BRIGHTCOLORF(ARG, LOCAL)
RETURNF LOCAL



;========================================================================
;EV16, 대만족보너스구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·대만족보너스를 얻고 있는 경우, 죠교개시시에 표시된다
;·타이밍은죠교개시구상(EV11)의 뒤, 죠교자행동 전구상(EV12)의 전
;-------------------------------------------------
@KOJO_EVENT_K1_16(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(0. 선택전/1. 선택 후)
;-------------------------------------------------
;────────────────────────────────────
;선택 전구상
;────────────────────────────────────
;·매우 기분이 좋은 모습으로, 금일는 무엇을당했다 있고일까하고 방문한다
;·구상표시전에 지문(%CALLNAME:TARGET%님 대만족 보너스)
;·구상표시의 뒤로 지문(%CALLNAME:TARGET%는 매우 기분이 좋은 모습으로, 금일는 무엇을당했다 있고일까하고 방문해 왔다)이 계속된다
;·지문의 뒤로선택지가 표시된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족보너스선택전
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && ARG == 0
	;=================================================
	;처음
	;=================================================
	IF 구상기입체크(100) && FIRSTEVENT(0)
		;선택지로 멈추므로 W를 L로 변경
		PRINTFORML 「이제, 조금씩 익숙해지는 걸까?」
		PRINTFORML 「니가 좋아하는 일, 해줄게」
		RETURN 1
	ENDIF
	;=================================================
	;기타·조건없음
	;=================================================
	IF 구상기입체크(100)
		;처음에 이전
		PRINTFORML 「 나는 만족했으니까」
		PRINTFORML 「이번엔 니가 좋아하는 걸 해줄게」
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;선택 후구상
;────────────────────────────────────
;·죠교대상의 대답에 대해서, 한 마디
;·구상표시에 뒤로 지문(%CALLNAME:TARGET%는 %CALLNAME:MASTER%의 대답을 (들)물으면죠교의 준비를 시작했다)이 계속된다
;·상기의 지문을 표시했다뒤로, 선택지 마다의 지문이 표시된다
;·휴식가선택당했다경우는 EV12, 포상에 의한 중지에 계속된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족보너스선택 후
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && ARG == 1
	;=================================================
	;언제나처럼
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "통상")
		PRINTFORMDW %CALLNAME:TARGET%는 살짝 어이없는 표정으로 되묻는다
		PRINTFORML
		PRINTFORML 「너… 그 거 「무엇을 먹고 싶다?」라고 물었는데 「뭐든지 좋다」라고 대답하는 거라구」
		PRINTFORML 「수동적인것도 이정도면 병이네」
		RETURN 1
	ENDIF
	
	;=================================================
	;항문을괴롭혀
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "항문")
		PRINTFORMW 「이 변태.」
		PRINTFORML 「뭐 좋아요… \@ TALENT:MASTER:남자 ? 너의 몸, 여자아이처럼 만들어 줄게 #  \@」
		RETURN 1
	ENDIF
	
	;선택 하는 일에 의해(TFLAG:징계·플래그)가 선다
	;=================================================
	;징계해
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "징계·")
		;자위 당해가버려되었다등역강간 정말 좋아합니다
		PRINTFORML 「차라리 강간해달라는 거구나」
		;실제로 해 줄까는 상황 나름인 것으로 따돌린다
;OriginalString : 아웃8, "「うん。まあ、その」")
		CALL FADEOUT(8, "「응. 뭐, 그」")
		PRINTFORML 「생각해 둘게」
		RETURN 1
	ENDIF
	
	;=================================================
	;격렬하게
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "하드")
		PRINTFORML 「무리하게 범해지고 싶다는 거구나」
		PRINTFORML 「마음내키면 해 줄게」
		RETURN 1
	ENDIF
	
	;=================================================
	;응석부리게
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "노닥노닥")
		;대체로부끄러워한다/하드로 한 2택이 되는 것이키스의 현상
		;항문고문 된다/봉사파이즈리/이라마 당하는 상황은 발생할 수 있다
		IF !RAND:4
			PRINTFORMW 「어떻게 하지?」
			PRINTFORMDL %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 무릎에 허리를 내려 응석부려 왔다
			PRINTFORML 「좋아, 내가 기분이 내키면.」
			PRINTFORML 어깨 너머로 보이는 레이무의 뺨은, 붉다.
		ELSEIF !RAND:3
;OriginalString : 아웃8, "なでなで")
			CALL FADEOUT(8, "스윽스윽")
			PRINTFORMW 「네~ 끝」
			PRINTFORMDW %CALLNAME:TARGET%는 조교를 끝맺으려고 했다
			PRINTFORML 「좀 더?」
;OriginalString : 아웃6, "くすっ")
			CALL FADEOUT(6, "키득")
			PRINTFORML 「네 네」
		ELSEIF !RAND:2
			PRINTFORMDW %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 무릎에 허리를 내려 왔다
			PRINTFORML 「응」
		ELSE
			;감미가 강하기 때문에 개선
			PRINTFORML 「좋아」
			PRINTFORMDW %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 뺨에 입술을 대어 왔다
			PRINTFORMW 「%RAND_SPLIT("가득./잔뜩")% 사랑합시다」
			PRINTFORM 「
			CALL HEARTBW
			PRINTFORML 
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;망가질때까지
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "이상")
		PRINTFORMW 「바보」
		PRINTFORML 「네가 망가지면 곤란한 것은……」
		RETURN 1
	ENDIF
	
	;개목걸이의 소지가 조건
	;=================================================
	;밖에서해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "야외")
		RETURN 1
	ENDIF
	
	;호의+호감도가 10000이상으로 가능하게 된다
	;=================================================
	;임신해
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "애만들기")
		PRINTFORMDW %CALLNAME:TARGET%에게 임신해달라고 고하면, %CALLNAME:TARGET%는 흥분해 몸을 떨었다
		PRINTFORM 「좋아요. 너의 아기 낳아 준다
		CALL HEARTBW
		IF TALENT:Ｖ민감 == 0
			PRINTFORMDW %CALLNAME:TARGET%는 일시적으로 [Ｖ민감]을 얻었다
			PRINTFORML
			TALENT:Ｖ민감 = 1
		ENDIF
		RETURN 1
		;문자의 예쁜여자라고 하는 스테이터스 애액으로 떨어지기 때문에(위해) 필중이 아닌 필주
		;PRINTFORMDL %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 음경에 술술모필을 달리게 했다
		;PRINTFORML 「이것? Ａ장비야」
		;PRINTFORMDW %CALLNAME:MASTER%는 일시적으로[추적]을 얻었다
	ENDIF
	
	;죠교대상의소모에 관련되지 않고선택가능
	;=================================================
	;쉬게
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("금일", "휴식")
		SELECTCASE TIME
			;낮
			CASE 0
				PRINTFORMW 「좋아。지금 차를 가져올게」
				PRINTFORML
				PRINTFORMDL 조르륵…
				PRINTFORMW 후룩…
				PRINTFORML 
				PRINTFORML
				PRINTFORMW 「흠。이게 제일 진정되네」
			;밤
			CASEELSE
				PRINTFORMW 「좋아요. 그런데…」
				PRINTFORMW 「이군요? 오늘의 더운 물은, 뭔가 먹고 싶은 것 있는 것일까?」
				PRINTL
				PRINTFORMDL [0] 된장국
				PRINTFORMDL [1] 고기감자조림
				PRINTFORMDL [2] 스키야키
				PRINTFORMDL [3] %CALLNAME:TARGET%
				PRINTFORMDL [4] 밖에서 먹고 싶다
				PRINTFORMDL [5] 죽
				PRINTFORMDL [6] 너의 요리는 먹고 싶지 않다
				CALL INPUTINT(0, 1, 2, 3, 4, 5, 6)
				SELECTCASE RESULT
					CASE 0
						PRINTFORMW 「좋아。%CALLNAME:MASTER%(을)를 위해、된장국 만들어 줄게」
						PRINTFORMDL 
						PRINTFORMDL …
						PRINTFORMDL ……
						PRINTFORMDL ………
						PRINTFORML 
						PRINTFORMDL 쩝쩝
						PRINTFORML 
						;여기서 즈조조 하는 것은당신만으로 충분히
						;레이무의 분의 즈조조를 넣는다고 한다면, 딸나스이카나 코코로로 식탁이 떠들썩하게 되어 가는 묘사. 혹은 그 후의 식사 묘사도 갖고 싶어진다.
					CASE 1
						;CFLAG:ARG:M호의 = 1000 ;레이무 엔딩 테스트용 호감도 조절 코드
						;CFLAG:ARG:호의  = 1000
						;PRINTL （테스트）호감도 1000으로 고정
						PRINTFORMW 「좋아. 고기감자네」
						PRINTFORMDW 취사장에 서 있는 %CALLNAME:TARGET%의 뒷모습을 바라보면서 %CALLNAME:MASTER%(은)는 휴식을 취했다…
					CASE 2
						;무녀씨에게 화궁
						PRINTFORMW 「좋아요. 스키야키군요」
						PRINTFORML
						PRINTFORMW 「고기가 없네…… 새고기도 괜찮지?」
						PRINTFORMDL %CALLNAME:TARGET%는 활을 꺼내 밖으로 나가고, 잠시 후 들새를 잡아 돌아왔다
						PRINTFORMDW 무녀에게 활… 그런 것도 있는 것인가
					CASE 3
						PRINTFORMW 「%RAND_SPLIT("이 색마/호색가/바보")%」
						PRINTFORML
						PRINTFORMDW 그날 밤의 식탁에는 정력에 좋은 요리뿐이였다
						PRINTFORMDL %CALLNAME:TARGET%는 소매로 입가를 숨기면서 %CALLNAME:MASTER%의 모습을 보고 있다
					CASE 4
						PRINTFORMW 「그렇구나…가끔 씩은 밖에서 먹을까요」
						PRINTFORMDL %CALLNAME:TARGET%는 밖에 있는 내내 %CALLNAME:MASTER%(와)과 팔짱을 꼈다
						PRINTFORML
						PRINTFORML 「도망치지 않도록 하는 것일 뿐이야」
					CASE 5
						PRINTFORMW 「어디 아프기라도 한거야?」
						PRINTFORMW 「그렇게까지 쉬고 싶은 걸까…」
						;밥빼기에는 하지 않는다. 휴일 묘사에 대응하기 때문에(위해) 묘사 추가
						PRINTFORML
						PRINTFORMDW 그 날의 저녁식사는 닭죽이었다
					CASE 6
						PRINTFORMDW %CALLNAME:MASTER%의 자그마한 저항은 의미없었다
						PRINTFORML
						PRINTFORMDL 그 날의 저녁식사는 날달걀보리밥이었다
				ENDSELECT
		ENDSELECT
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 오늘의방침구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·타이밍은죠교개시구상(EV11)의 뒤, 죠교자행동 전구상(EV12)의 전
;·대만족보너스를 얻고 있는 경우는 그 쪽이우선 된다(즉, 이 개소가 불려 가는 일은 없다)
;·죠교자에 의해 오늘의방침가 결정당했다경우에 표시
;·구상표시의 뒤로 PRINTL를 사이에 두어 지문. 지문은방침 마다 전용의 것이 된다
;·애만들기, 휴식는 포상으로 밖에 나오지 않기 때문에 이 개소에서는 불요
;·Ａ감각가 4까지는 확률（Ａ감각, 0으로 1/3）로 TFLAG:금일의방침 == 1（Ａ개발）가 되어 1/5의 확률로 다른방침에 의해 덧쓰기된다
;·Ａ감각가 5이후가 되면금일의방침 == 1（Ａ개발）가 될 가능성은 없어진다（감각가 상승하면Ａ개발의필요는 없는, 이라고 하는 사양? ）
;-------------------------------------------------
@KOJO_EVENT_K1_17(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(현상, 파생 없음)
;-------------------------------------------------

;일행 비운다(이손의 처리는 최종적으로는 시스템측에서 조달하고 싶다고 생각한다)
PRINTL

;ABL:MASTER:Ａ감각 < 5의 조건때만 발생할 가능성이 있다
;Ａ감각의 상승에 수반해 발생 확률이 떨어져 유키（0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12. 한층 더 1/5로 다른방침로 덧쓰기）, Ａ감각 5 이상으로는 완전하게 발생하지 않게 된다
;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가항문개발
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "항문")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가징계·
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "징계·")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가 평소보다 격렬하고
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && IS_POLICY("금일", "하드")
	PRINTFORML 「응. 그렇구나, 이번은…」
	PRINTFORM 「
	;이쪽은새드무녀의 생각하는 심한 일인 것으로 핑크 문자
	IF TALENT:새드
		PRINTFORMD 심한 일.
		PRINTFORML 해 준다」
	;이쪽은당신에 있어서의 심한 일인 것으로 백문자
	ELSE
		PRINTFORML 심한 일. 해 준다」
	ENDIF
	;밤
	;인간으로 생딸인레이무씨에 의한 힘껏의 나오지 않고. 빛을 꺼 주지 않는다. 물론레이무씨 쪽이 부끄럽다.
	SIF TIME
		PRINTFORMDL %CALLNAME:TARGET%는 불도 끄지 않고 행위를 개시했다…
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가노닥노닥
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && IS_POLICY("금일", "노닥노닥")
	PRINTFORML 「뭐… 가끔은 끈적하게 하고싶을 뿐이야」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가이상
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "이상")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가야외
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "야외")
	PRINTFORML 
	RETURN 1
ENDIF

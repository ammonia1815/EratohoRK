;자신에게의 마음을 묻다
KFLAG:101 = 8
CFLAG:1001 = 0
;성에 관한 이야기를 함
KFLAG:102 = 8
CFLAG:1002 = 0
;키스
KFLAG:115 = 8
CFLAG:1015 = 0

@CLOSETRAIN_K4
;죠교종료시에 불려 간다.
CFLAG:1000 = 0
CFLAG:1001 = 0
CFLAG:1002 = 0
CFLAG:1015 = 0

TALENT:겁쟁이 = 1
TALENT:얌전한 = 1

@DECIDEACTCHECK_K4
;죠교주의행동결정 후에 불려 가는 함수. 죠교주의 행위에 응해, 행동 마다 지정당했다변수를 조작해, 행동금지플래그를 ON/OFF 한다.

;지금 기분을 묻다의빈도를 체크
IF TFLAG:90 == 0
	KFLAG:100 -= 5
ELSEIF TFLAG:80 == 0 && CFLAG:1000 == 0
	KFLAG:100 -= 2
ELSEIF KFLAG:100 < 8
	IF FAVOR(0, 2000)
		KFLAG:100 += (RAND:3 > 0)
	ELSE
		KFLAG:100 += 1 + RAND:2
	ENDIF
ENDIF
IF KFLAG:100 > 7
	CFLAG:1000 = 0
ELSEIF KFLAG:100 < 1
	CFLAG:1000 = 100
ENDIF

;자신에게의 마음을 묻다의빈도를 체크
IF TFLAG:90 == 1
	KFLAG:101 -= 5
ELSEIF TFLAG:80 == 0 && CFLAG:1000 == 0
	KFLAG:101 -= 2
ELSEIF KFLAG:101 < 8
	IF FAVOR(0, 2000)
		KFLAG:101 += (RAND:3 > 0)
	ELSE
		KFLAG:101 += 1 + RAND:2
	ENDIF
ENDIF
IF KFLAG:101 > 7
	CFLAG:1001 = 0
ELSEIF KFLAG:101 < 1
	CFLAG:1001 = 100
ENDIF

;성에 관한 이야기를 하다의빈도를 체크
IF TFLAG:90 == 2
	KFLAG:102 -= 5
ELSEIF TFLAG:80 == 0 && CFLAG:1000 == 0
	KFLAG:102 -= 2
ELSEIF KFLAG:102 < 8
	IF FAVOR(0, 2000)
		KFLAG:102 += (RAND:3 > 0)
	ELSE
		KFLAG:102 += 1 + RAND:2
	ENDIF
ENDIF
IF KFLAG:102 > 7
	CFLAG:1002 = 0
ELSEIF KFLAG:102 < 1
	CFLAG:1002 = 100
ENDIF

;키스의빈도체크
IF TFLAG:90 == 15
	;호감도 2000 미만에서의키스는 생각보다는 귀중
	IF FAVOR(0, 2000)
		KFLAG:115 -= 5
	ENDIF
ELSEIF KFLAG:115 < 8
	KFLAG:115 += 1
ENDIF
IF KFLAG:115 > 7
	CFLAG:1015 = 0
ELSEIF KFLAG:115 < 1
	CFLAG:1015 = 100
ENDIF


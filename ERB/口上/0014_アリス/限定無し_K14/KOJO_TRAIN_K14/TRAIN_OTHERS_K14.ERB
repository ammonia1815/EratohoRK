				ENDIF
			ENDIF
		;표시하지 않는다
		CASEELSE
			CLEARBIT 모두순서에표시, 4
	ENDSELECT
	SIF GETBIT(모두순서에표시, 4) && 기입체크 == 1
		RETURN 1
ENDIF


;========================================================================
;EV16, 대만족보너스구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·대만족보너스를 얻고 있는 경우, 죠교개시시에 표시된다
;·타이밍은죠교개시구상(EV11)의 뒤, 죠교자행동 전구상(EV12)의 전
;-------------------------------------------------
@KOJO_EVENT_K13_16(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(0. 선택전/1. 선택 후)
;-------------------------------------------------

;────────────────────────────────────
;선택 전구상
;────────────────────────────────────
;·매우 기분이 좋은 모습으로, 금일는 무엇을당했다 있고일까하고 방문한다
;·구상표시전에 지문(%CALLNAME:TARGET%님 대만족 보너스)
;·구상표시의 뒤로 지문(%CALLNAME:TARGET%는 매우 기분이 좋은 모습으로, 금일는 무엇을당했다 있고일까하고 방문해 왔다)이 계속된다
;·지문의 뒤로선택지가 표시된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족보너스선택전
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && ARG == 0
	;=================================================
	;처음
	;=================================================
	IF 구상기입체크(0) && FIRSTEVENT(0)
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;기타·조건없음
	;=================================================
	IF 구상기입체크(0)
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;선택 후구상
;────────────────────────────────────
;·죠교대상의 대답에 대해서, 한 마디
;·구상표시에 뒤로 지문(%CALLNAME:TARGET%는 %CALLNAME:MASTER%의 대답을 (들)물으면죠교의 준비를 시작했다)이 계속된다
;·상기의 지문을 표시했다뒤로, 선택지 마다의 지문이 표시된다
;·휴식가선택당했다경우는 EV12, 포상에 의한 중지에 계속된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족보너스선택 후
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && ARG == 1
	;=================================================
	;언제나처럼
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "통상")
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;항문을괴롭혀
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "항문")
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;선택 하는 일에 의해(TFLAG:징계·플래그)가 선다
	;=================================================
	;징계해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "징계·")
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;격렬하게
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "하드")
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;응석부리게
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "노닥노닥")
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;망가질때까지
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "이상")
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;개목걸이의 소지가 조건
	;=================================================
	;밖에서해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "야외")
;OriginalString : 
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;호의+호감도가 10000이상으로 가능하게 된다
	;=================================================
	;임신해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "애만들기")
;OriginalString : 
		PRINTFORMW
		RETURN 1
	ENDIF
	
	;죠교대상의소모에 관련되지 않고선택가능
	;=================================================
	;쉬게
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("금일", "휴식")
		;죠교대상가소모 하고 있다
		IF CFLAG:MASTER:소모 >= 3
;OriginalString : 
			PRINTFORMW 
		;실은 그만큼 피곤하지 않다
		ELSE
;OriginalString : 
			PRINTFORMW 
		ENDIF
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 오늘의방침구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·타이밍은죠교개시구상(EV11)의 뒤, 죠교자행동 전구상(EV12)의 전
;·대만족보너스를 얻고 있는 경우는 그 쪽이우선 된다(즉, 이 개소가 불려 가는 일은 없다)
;·죠교자에 의해 오늘의방침가 결정당했다경우에 표시
;·구상표시의 뒤로 PRINTL를 사이에 두어 지문. 지문은방침 마다 전용의 것이 된다
;·애만들기, 휴식는 포상으로 밖에 나오지 않기 때문에 이 개소에서는 불요
;·Ａ감각가 4까지는 확률（Ａ감각, 0으로 1/3）로 TFLAG:금일의방침 == 1（Ａ개발）가 되어 1/5의 확률로 다른방침에 의해 덧쓰기된다
;·Ａ감각가 5이후가 되면금일의방침 == 1（Ａ개발）가 될 가능성은 없어진다（감각가 상승하면Ａ개발의필요는 없는, 이라고 하는 사양? ）
;-------------------------------------------------
@KOJO_EVENT_K13_17(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(현상, 파생 없음)
;-------------------------------------------------

;일행 비운다(이손의 처리는 최종적으로는 시스템측에서 조달하고 싶다고 생각한다)
;OriginalString : 
PRINTL

;ABL:MASTER:Ａ감각 < 5의 조건때만 발생할 가능성이 있다
;Ａ감각의 상승에 수반해 발생 확률이 떨어져 유키（0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12. 한층 더 1/5로 다른방침로 덧쓰기）, Ａ감각 5 이상으로는 완전하게 발생하지 않게 된다
;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가항문개발
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "항문")
;OriginalString : 
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가징계·
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "징계·")
;OriginalString : 
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가 평소보다 격렬하고
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "하드")
;OriginalString : 
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가노닥노닥
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "노닥노닥")
;OriginalString : 
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가이상
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "이상")
;OriginalString : 
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침가야외
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("금일", "야외")
;OriginalString : 
	PRINTFORMW 
	RETURN 1
ENDIF

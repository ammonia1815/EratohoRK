;━━━━━━━━━━━━━━━━━━━━━━━━
IF 기입체크 && ARG:0
	SETBIT 모두순서에표시, 0
	SELECTCASE ARG:0
		;고통각인Lv2
		CASE 2
		;고통각인Lv9…[굳셈]이있는경우, 그걸잃는다
		CASE 9
		;표시하지 않는다
		CASEELSE
			CLEARBIT 모두순서에표시, 0
	ENDSELECT
	SIF GETBIT(모두순서에표시, 0) && 기입체크 == 1

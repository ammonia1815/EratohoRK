	CALL ADD_CRI_VAR("기능취득", LINE_CALC(ABL:ＢＬ끼, "0→-2, 4→0, LIMIT/-2～0"))
ENDIF

;죠교자에바이가 없고, 여자끼리
IF !TALENT:남자 && !TALENT:MASTER:남자 && !TALENT:바이
	;죠교자의레즈끼가[0→0, 4→4]를 가산(0～4)

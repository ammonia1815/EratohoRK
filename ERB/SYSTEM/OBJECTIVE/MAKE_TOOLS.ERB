;죠교자에페니스가 있으면페니스밴드는 불요
SIF PENIS(TARGET)
	CALL DIM_CRI_VAR("페니스밴드"  , -999)
;죠교대상에페니스가 없으면 오나홀은 불요
SIF !PENIS(MASTER)
	CALL DIM_CRI_VAR("오나홀"    , -999)
;커스텀도구는 미대응
CALL DIM_CRI_VAR("커스텀도구"  , -999)


;------------------------------------------
;도구단체 판정
;------------------------------------------
@MAKE_TOOLS_TOOL
CALL ADD_CRI_VAR("페니스밴드"  , TALENT:색정적 * 4)
CALL ADD_CRI_VAR("밧줄"            , TALENT:긴박능숙 * 4)
CALL ADD_CRI_VAR("바늘"            , TALENT:바느질 * 4)

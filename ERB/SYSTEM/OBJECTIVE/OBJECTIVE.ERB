;==================================================
;
;직접 판단 처리
;
;==================================================
;기력·체력회복
@EST_T_REC_VIT()
;체력가 1/5이하되었다등
IF BASE:MASTER:체력 < MAXBASE:MASTER:체력 / 5
	;회복에 향하여행동 한다
	CALLF EST_TO_ACTM("가산", "휴식", 10)
ENDIF

;==================================================
;
;판단 반영 처리
;
;==================================================
@EST_TO_ACTM(ARGS, ARGS:1, ARG)
#FUNCTION
#LOCALSIZE 20
#DIM LTEMP
[SKIPSTART]
IF ARGS == "초기화"
	VARSET LOCAL
	RETURNF 0
ENDIF
LTEMP = GET_ACTNUM(ARGS:1)
SIF LTEMP < 0
	RETURNF 0
IF ARGS == "가산"
	LOCAL:GET_ACTNUM(ARGS:1) = ARG
ELSEIF ARGS == "취득"
	RETURNF LOCAL:GET_ACTNUM(ARGS:1)
ENDIF
[SKIPEND]

@EST_TO_ACT(ARGS, ARGS:1, ARG)
#FUNCTION
#LOCALSIZE 200
#DIM LTEMP
[SKIPSTART]
IF ARGS == "초기화"
	VARSET LOCAL
	RETURNF 0
ENDIF
LTEMP = MENUNUM(ARGS:1)
SIF LTEMP < 0
	RETURNF 0
IF ARGS == "가산"
	LOCAL:MENUNUM(ARGS:1) = ARG
ELSEIF ARGS == "취득"
	RETURNF LOCAL:MENUNUM(ARGS:1)
ENDIF
[SKIPEND]





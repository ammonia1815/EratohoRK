	;시험적으로마력에서 살 수 있는기교상한을 없애 본다
	;세상마력야
	;PRINTFORML [--] 죠교기교는 실천으로 높일 수 밖에 없을 것이다
ENDSELECT
PRINTL [ 3] 지식을 습득한다
PRINTL [ 4] 기능을 취득한다
IF FLAG:모드 != 1 || FLAG:디버그 || !(FLAG:AI자유도&1)
	PRINTL [ 5] 외계의 성 도구를 연성 한다
	PRINTL [ 6] 고문도구를 연성 한다
ENDIF
PRINTFORML \@ ITEM:9 ? [--] 도구는 이미 커스텀됬다 # [10] 도구를 커스터마이징한다　　　　　　　　　　　　 마력 3000  요점[%TALENTNAME:59%] \@
SIF !TALENT:남자
	PRINTFORML [11] \@ TALENT:후타나리 ? 양성화 의식을 취소　 # 양성화 의식을 한다 \@　　　　　　　　　　　　　　 마력7000
SIF !TALENT:남자
	PRINTFORML \@ TALENT:거유 ? [12] 가슴 크기는 최대치이다 # [12] 거유의 의식을 한다　　　　　 \@　　　　　　　　　　 마력5000
SIF !TALENT:남자
	PRINTFORML \@ TALENT:빈유 ? [13] 가슴 크기는 최소치이다 # [13] 빈유의 의식을 한다　　　　　 \@　　　　　　　　　　 마력1000
SIF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
	PRINTFORML \@ MAXBASE:MASTER:사정 < 2500 + CFLAG:MASTER:정력한계 * 500 ? [--] 노예의 정력은 아직 단련해서 늘릴 수 있다 # [16] 노예 정력의 한계를 올린다　　　　　　　　　　　 마력{(MAXBASE:MASTER:사정 - 2500 - CFLAG:MASTER:정력한계 * 500) / 500 * 1000 + 1000} \@
DRAWLINE

;────────────────────────────────────
;입력 처리
$INPUT_LOOP
INPUT
SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		SIF !TALENT:주인님
			GOTO FAILED
		IF CFLAG:마력 < 1000
			$FAILED_BY_MP
			CLEARLINE 1
			REUSELASTLINE 마력이 부족한 것 같다…
			GOTO INPUT_LOOP
		ENDIF
		CALL NEW_TRAINER
		SIF RESULT
			RETURN 0
	CASE 2
		;기교상승에 도전
		CALL RIZE_ABL
		LOCAL = RESULT:1
		SELECTCASE RESULT
			;성공시
			CASE 0
				CALL PRINT_DIALOG(@"%CALLNAME:TARGET%의 죠교기교를<{ABL:기교+1}>에 올려하시겠습니까?",1,1,1)
				CALL PRINT_CHOICE(,"예",1,"아니오",2,)
				IF RESULT == 1
					;마력를 소비
					CFLAG:마력 -= LOCAL
					;기교를 상승
					ABL:기교++
					;이벤트구상:죠교기교업
					CALL KOJO_EVENT(110, 1)
					CALL VOIDLINE_IF(RESULT)
					;지문 표시
					PRINTFORMW %CALLNAME:TARGET%의 조교 기교는<{ABL:기교}>(이)가 되었습니다
				ENDIF
			;마력불발시
			CASE 1
				REUSELASTLINE 마력이 부족한 것 같다…(마력{LOCAL}가필요)
				GOTO INPUT_LOOP
			;죠교레벨불발시
			CASE 2
				REUSELASTLINE 기교를 올리려면, 좀 더경험를 쌓는필요가 있을 것이다…(죠교LV{RIZE_ABL_V(1)}가필요)
				GOTO INPUT_LOOP
			;기교상한시
			CASE 3
				REUSELASTLINE 더 이상기교는 올려지지 않다
				GOTO INPUT_LOOP
			;그 외의 문제
			CASEELSE
				$FAILED
				CLEARLINE 1
				GOTO INPUT_LOOP
		ENDSELECT
	CASE 3
		;이벤트구상:지식를 얻기 전
		CALL KOJO_EVENT(110, 2)
		PRINTFORML %CALLNAME%(은)는 마력을 사용해 새로운 지식을 얻기로 했다…
		PRINTL [ 0] - 그만둔다
		PRINTFORML \@ TALENT:배합지식   ? [--] [배합지식]을 가지고 있습니다           # [ 1] 약품의 [배합지식]을 습득　　　　　　　　　　　　 마력{GAIN_TALENT_V("배합지식"  , 0), 5} 요LV{GAIN_TALENT_V("배합지식"  , 1)} \@
		PRINTFORML \@ TALENT:매혹       ? [--] [매혹]을 가지고 있습니다               # [ 2] [매혹]능력을 체득　　　　　　　　　　　　　　　 마력{GAIN_TALENT_V("매혹"      , 0), 5} 요LV{GAIN_TALENT_V("매혹"      , 1)} \@
		PRINTFORML \@ TALENT:금단의지식 ? [--] [금단의지식]을 가지고 있습니다         # [ 3] [금단의지식]을 익힌다　　　　　　　　　　　 마력{GAIN_TALENT_V("금단의지식", 0), 5} 요LV{GAIN_TALENT_V("금단의지식", 1)} \@
		PRINTFORML \@ TALENT:도구능숙   ? [--] [도구능숙]을 가지고 있습니다           # [ 4] [도구능숙]의 지식을 습득　　　　　　　　　　　　 마력{GAIN_TALENT_V("도구능숙"  , 0), 5} 요LV{GAIN_TALENT_V("도구능숙"  , 1)} \@
		PRINTFORML \@ TALENT:촬영기능   ? [--] [촬영기능]을 가지고 있습니다           # [ 5] 사진의 [촬영기능]을 습득　　　　　　　　　　　　 마력{GAIN_TALENT_V("촬영기능"  , 0), 5} 요LV{GAIN_TALENT_V("촬영기능"  , 1)} \@
		$INPUT_LOOP_SKILL
		INPUT
		SELECTCASE RESULT
			CASE 0
				RESTART
			CASE 1 TO 5
				IF 0
				ELSEIF RESULT == 1
					LOCALS:0 = 배합지식
					LOCALS:1 = 약을 올바르게 취급하려면, 좀 더경험를 쌓는필요가 있을 것이다…
					LOCAL = 3
				ELSEIF RESULT == 2
					LOCALS:0 = 매혹
					LOCALS:1 = 매혹의 능력을 얻으려면, 좀 더경험를 쌓는필요가 있을 것이다…
					LOCAL = 4
				ELSEIF RESULT == 3
					LOCALS:0 = 금단의지식
					LOCALS:1 = 금단의지식를 끈 풀려면, 좀 더경험를 쌓는필요가 있을 것이다…
					LOCAL = 5
				ELSEIF RESULT == 4
					LOCALS:0 = 도구능숙
					LOCALS:1 = 외계의 성구를 능숙하게 사용하려면, 아직경험이 부족한 것 같다…
					LOCAL = 6
				ELSEIF RESULT == 5
					LOCALS:0 = 촬영기능
					LOCALS:1 = 카메라를 능숙하게 사용하려면, 좀 더경험를 쌓는필요가 있을 것이다…
					LOCAL = 37
				ENDIF
				IF TALENT:LOCALS
					CLEARLINE 1
					GOTO INPUT_LOOP_SKILL
				ENDIF
				;기능취득에 도전
				CALL GAIN_TALENT(LOCALS)
				LOCAL:1 = RESULT:1
				SELECTCASE RESULT
					;성공시
					CASE 0
						CALL PRINT_DIALOG(@"%CALLNAME:TARGET%가 소질[%LOCALS%]를취득 합니다. 하시겠습니까?",1,1,1)
						CALL PRINT_CHOICE(,"예",1,"아니오",2,)
						IF RESULT == 1
							;마력를 소비
							CFLAG:마력 -= LOCAL:1
							;기능을취득
							TALENT:LOCALS ^= 1
							;이벤트구상:지식취득
							CALL KOJO_EVENT(110, LOCAL)
							CALL VOIDLINE_IF(RESULT)
							;지문 표시
							PRINTFORMW %CALLNAME%(은)는 [%LOCALS%](을)를 취득했습니다
						ENDIF
					;마력불발시
					CASE 1
						CLEARLINE 1
						REUSELASTLINE 마력이 부족한 것 같다…(마력{LOCAL:1}가필요)
						GOTO INPUT_LOOP_SKILL
					;죠교레벨불발시
					CASE 2
						CLEARLINE 1
						REUSELASTLINE %LOCALS:1%(죠교LV{GAIN_TALENT_V(LOCALS, 1)}가필요)
						GOTO INPUT_LOOP_SKILL
					;그 외의 문제
					CASEELSE
						CLEARLINE 1
						GOTO INPUT_LOOP_SKILL
				ENDSELECT
			CASEELSE
				CLEARLINE 1
				GOTO INPUT_LOOP_SKILL
		ENDSELECT
	CASE 4
		;이벤트구상:기술을 얻기 전
		CALL KOJO_EVENT(110, 7)
		PRINTFORML %CALLNAME%(은)는 마력을 사용해 새로운 기술을 얻기로 했다…
		PRINTL [ 0] - 그만둔다
		PRINTFORML \@ TALENT:혀기술          ? %"[--] [혀기술]을 가지고 있습니다"    , 51, LEFT% # %"[ 1] [혀기술]을 교묘하게"      , 51, LEFT   % 마력{GAIN_TALENT_V("혀기술"        , 0), 5} 요LV{GAIN_TALENT_V("혀기술"        , 1)} \@
		PRINTFORML \@ TALENT:손가락기술      ? %"[--] [손가락기술]을 가지고 있습니다", 51, LEFT% # %"[ 2] [손가락기술]을 터득"        , 51, LEFT   % 마력{GAIN_TALENT_V("손가락기술"    , 0), 5} 요LV{GAIN_TALENT_V("손가락기술"    , 1)} \@
		PRINTFORML \@ TALENT:허리기술          ? %"[--] [허리기술]을 가지고 있습니다    ", 51, LEFT% # %"[ 3] [허리기술]을 요염하게"    , 51, LEFT   % 마력{GAIN_TALENT_V("허리기술"        , 0), 5} 요LV{GAIN_TALENT_V("허리기술"        , 1)} \@
		PRINTFORML \@ TALENT:긴박능숙        ? %"[--] [긴박능숙]을 가지고 있습니다"  , 51, LEFT% # %"[ 4] [긴박능숙]을 터득"    , 51, LEFT   % 마력{GAIN_TALENT_V("긴박능숙"      , 0), 5} 요LV{GAIN_TALENT_V("긴박능숙"      , 1)} \@
		PRINTFORML \@ TALENT:새드            ? %"[ 5] [새드]를 가지고 있습니다"    , 51, LEFT% # %"[ 5] [새드]플레이 선호"        , 51, LEFT% \@ 마력{GAIN_TALENT_V("새드"          , 0), 5} 요LV{GAIN_TALENT_V("새드"          , 1)}
		PRINTFORML \@ TALENT:착의플레이선호  ? %"[ 6] [착의플레이선호]를 가지고 있습니다"  , 51, LEFT% # %"[ 6] [착의플레이선호]를 선호", 51, LEFT% \@ 마력{GAIN_TALENT_V("착의플레이선호", 0), 5} 요LV{GAIN_TALENT_V("착의플레이선호", 1)}
		PRINTFORML \@ TALENT:더러움무시        ? %"[--] [더러움무시]을 가지고 있습니다"  , 51, LEFT% # %"[ 7] [더러움무시]가 가능하게"  , 51, LEFT   % 마력{GAIN_TALENT_V("더러움무시"      , 0), 5} 요LV{GAIN_TALENT_V("더러움무시"      , 1)} \@
		$INPUT_LOOP_SKILL2
		INPUT
		SELECTCASE RESULT
			CASE 0
				RESTART
			CASE 1 TO 7
				IF 0
				ELSEIF RESULT == 1
					LOCALS:0 = 혀기술
					LOCALS:1 = 인간세상 밖의혀기술에 이르려면, 아직경험이 부족한 것 같다…
					LOCAL = 8
				ELSEIF RESULT == 2
					LOCALS:0 = 손가락기술

IF RESULT:0 > 0
;원본	CALL PRINT_DIALOG(@"구상推奨のコンフィグ設定を適用しますか？", 1, 1, 0)
	CALL PRINT_DIALOG(@"구상 설정을 적용합니까?？", 1, 1, 0)
	CALL PRINT_DIALOG(@"（적용 후 옵션에서 변경할 수 있습니다）", 0, 1, 1)
	CALL PRINT_CHOICE(, "네", 1, "아니오", 2, )
	IF RESULT == 1
		TALENT:MASTER:독심능력 = RESULT:1  >= 0 ? RESULT:1  # TALENT:MASTER:독심능력	;主人公の독심능력(0=読めない、1=空気が、2=心が)
		FLAG:소질표시방법      = RESULT:2  >= 0 ? RESULT:2  # FLAG:소질표시방법			;素質の表示分類(0=번호順、1=系統別)
		FLAG:일상              = RESULT:3  >= 0 ? RESULT:3  # FLAG:일상					;일상이벤트(0=オフ、1=オン)
		FLAG:임신              = RESULT:4  >= 0 ? RESULT:4  # FLAG:임신					;죠교자の임신判定(0=オフ、1=オン)
		FLAG:노예임신          = RESULT:5  >= 0 ? RESULT:5  # FLAG:노예임신				;죠교대상の임신判定(0=オフ、1=愛()があるほど임신しやすい、2=普通にオン)
		FLAG:AI자유도          = RESULT:6  >= 0 ? RESULT:6  # FLAG:AI자유도				;AI자유도（SANDBOX用）(0=余計なことしない、1=人員追加、2=기교上昇、4=技能취득、8=도구錬成、15=全てを自動で行う)
		FLAG:구상              = RESULT:10 >= 0 ? RESULT:10 # FLAG:구상					;구상표시설정(0=表示しない、1=表示する)
		;애니메設定(0=オフ、1=オン)
		;11.캐릭터 등장 컷인/12.ＢＧＭカットイン/13.PALAM獲得애니메/14.탈의애니메/15.昼夜の背景色변화/
		;16.全画面カットイン/17.フラッシュ効果/18.振動効果/19.文字のスライド/20.文字のフェードイン・アウト
		FOR LOCAL:0, 11, 21
			SIF RESULT:(LOCAL:0) >= 0
				CALLF ANIME_CONFIG(CONF:(LOCAL:0 - 11), RESULT:(LOCAL:0))
		NEXT
		GLOBAL = ANIME_CONFIG("SAVE")
		SAVEGLOBAL
	ENDIF
	PRINTFORMW 콘피그 설정을 변경 섬\@ RESULT == 1 ? 했다 # せん \@
ELSE
	PRINTW 말의 추천 하는 콘피그 설정은 없습니다
ENDIF
RETURN LOCAL:1



	CALL ADD_CRI_VAR("기승위"  , LINE_CALC(ABL:Ｃ감각, "0→0, 5→3, LIMIT/0～3"), LINE_CALC(ABL:Ｃ감각, "0→0, 5→4, LIMIT/0～4"))
	CALL ADD_CRI_VAR("대면좌위", LINE_CALC(ABL:Ｃ감각, "0→0, 5→3, LIMIT/0～3"), LINE_CALC(ABL:Ｃ감각, "0→0, 5→4, LIMIT/0～4"))

	CALL ADD_CRI_VAR("자위과시", GETBIT(TEQUIP:자위중, 1) ? 0 # -3)
	CALL ADD_CRI_VAR("야외플레이", -3)
ELSEIF TALENT:충동적
	CALL ADD_CRI_VAR("자위과시", GETBIT(TEQUIP:자위중, 1) ? 0 # 3)
	CALL ADD_CRI_VAR("야외플레이", 3)
ENDIF

;죠교자가무관심/호기심
IF TALENT:무관심
	CALL ADD_CRI_VAR("자위", GETBIT(TEQUIP:자위중, 0) ? 0 # -2)
	CALL ADD_CRI_VAR("비패개장", -3)
	CALL ADD_CRI_VAR("방치플레이", 3, 4)
